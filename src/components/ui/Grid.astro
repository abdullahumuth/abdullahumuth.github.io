---
interface Props {
  gridTitle: string;
  gridItems: {
    title: string;
    description: string;
  }[];
}

const {gridTitle, gridItems} = Astro.props;
---
<h2 class="text-2xl font-bold mb-6">{gridTitle}</h2>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  {gridItems.map((item) => (
    <div class="p-4 rounded-lg text-base-content bg-base-200">
      <h3 class="text-lg font-semibold mb-2">{item.title}</h3>
      <p class="text-sm text-base-content/80">{item.description}</p>
    </div>
  ))}
</div>
